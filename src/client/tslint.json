{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  },
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "ban-comma-operator": true,
    "no-var-keyword": true,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "prefer-template": true,
    "curly": true,
    "no-reference": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "no-unused-variable": true,
    "no-console": false
  },
  "rulesDirectory": []
}
